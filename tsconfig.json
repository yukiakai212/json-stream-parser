{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "lib": ["ES2020"],
    "moduleResolution": "nodenext",
    "strict": true,
	"strictPropertyInitialization": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
	"allowSyntheticDefaultImports": true,
	"forceConsistentCasingInFileNames": true,
	"resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
